<div class="ui card">
  <div class="content">
    <p class="header">
    <%= @list.name %>
    </p>

  <div>

  <div class='extra content'>
<h4>Name: <%= @artist.name %></h4>
<br />
<h4> Songs: </h4>
  <ul>
  <% @artist.songs.each do |songs| %>
    <li><%= link_to songs.name, artist_songs_path(@artist)  %></li>
  <% end %>
</ul>



<%= link_to 'Songs', artist_songs_path(@artist, @songs) %> |
<%= link_to 'Edit Artist', edit_list_artist_path([@list, @artist]) %> |
